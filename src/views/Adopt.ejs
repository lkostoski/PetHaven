    <style>
        .btn-group {
            margin-bottom: 10px;
            display: flex; /* Para alinear los botones horizontalmente */
            flex-wrap: wrap; /* Permite que los botones se ajusten a varias líneas */
            gap: 5px; /* Espacio entre botones */
        }
        
        .btn {
            padding: 8px 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            cursor: pointer;
            background-color: #fff; /* Fondo blanco por defecto */
            transition: background-color 0.3s ease, color 0.3s ease; /* Transición suave */
            white-space: nowrap; /* Evita que el texto del botón se rompa */
        }
        
        .btn:hover {
            background-color: #f0f0f0; /* Gris claro al pasar el ratón */
        }
        
        .btn.active {
            background-color: #007bff; /* Azul para el botón activo */
            color: #fff;
            border-color: #007bff;
        }
        
        /* Estilos para las opciones */
        .options {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Rejilla adaptable */
            gap: 10px;
        }
        
        .option {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1); /* Sombra suave */
            transition: transform 0.2s ease; /* Transición para el hover */
        }
        
        .option:hover {
            transform: scale(1.02); /* Ligero aumento al pasar el ratón */
            box-shadow: 3px 3px 7px rgba(0, 0, 0, 0.15); /* Sombra más pronunciada */
        }
        
        .option img {
            max-width: 100%;
            height: auto;
            margin-bottom: 5px;
        }
        
        .hidden {
            display: none;
        }
        .top-images {
            width: 100%;
            box-sizing: border-box;
        }

        .top-images ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            align-items: center; /* Centra verticalmente */
            height: 150px; /* Altura fija (ajustar según necesidad) */
        }

        .top-images ul li {
            box-sizing: border-box;
            height: 100%; /* Ocupa toda la altura del ul */
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 10px; /* Margen horizontal a cada lado del li */
        }

        .top-images ul li img {
            max-height: 100%;
            max-width: 100%;
            display: block;
            object-fit: contain; /* o object-fit: cover si prefieres que se recorten */
        }

        /* Media Queries para ajustar la altura y márgenes en diferentes pantallas */
        @media (max-width: 992px) {
            .top-images ul {
                height: 120px;
            }
            .top-images ul li {
                padding: 0 8px; /* Márgenes más pequeños en pantallas medianas */
            }
        }

        @media (max-width: 768px) {
            .top-images ul {
                height: 100px;
            }
            .top-images ul li {
                padding: 0 5px; /* Márgenes aún más pequeños en pantallas pequeñas */
            }
        }

        @media (max-width: 576px) {
            .top-images ul {
                height: 80px;
            }
            .top-images ul li {
                padding: 0 3px; /* Márgenes mínimos en móviles */
            }
        }

        .logo {
            width: 500px;
            height: auto;
        }  
    </style>
