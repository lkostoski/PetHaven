    <link rel="stylesheet" href="../myCSS.css"/>
    <style>
        /* Style for the bottons*/
        .animals {
            display: flex;
            justify-content: center;
            gap: 20px;
            align-items: center;
            margin-bottom: 20px;
        }
        #all {
            display: flex;
            max-height:50px;
        }
        
        .btn {
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-size: 16px;
            cursor: pointer;
            background-color:white; /* Fondo blanco por defecto */
            transition: background-color 0.3s ease, color 0.3s ease; /* Transición suave */
            white-space: nowrap; /* Evita que el texto del botón se rompa */
            align-items: center;
            flex-direction: column;
            justify-content: center;
        }

        .animals .btn {
            background-color: transparent;
            display: flex;
        }

        .btn-group {
            height: max-content;
            width: auto+50px;
            margin-bottom: 10px;
            display: flex; /* Para alinear los botones horizontalmente */
            flex-wrap: wrap; /* Permite que los botones se ajusten a varias líneas */
            gap: 10px; /* Espacio entre botones */
            margin-top: auto;
            border: #ddd solid 1px;
            border-radius: 8px;
            justify-content: center;
            background-color: white;
            height: auto;
        }

        .btn-group-container {
            display: flex;
            gap:10px;
            justify-content: center;
            width: auto;
        }

        .btn-container {
            text-align: center;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        
        .btn:hover {
            background-color: #abbdf7; /* Gris claro al pasar el ratón */
        }
        
        .btn.active {
            padding: 12px 24px;
            font-size: 16px;
            background-color: #007bff; /* Azul para el botón activo */
            color:black;
            border-color: #007bff;
        }
        
        .btn>img {
            margin: 0px;
            content: center;

        }
        
        #gender, #age {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 20px;
        }


        /* Estilos para las opciones */
        .options {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Rejilla adaptable */
            gap: 20px;
        }
        
        .option {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1); /* Sombra suave */
            transition: transform 0.2s ease; /* Transición para el hover */
        }
        
        .option:hover {
            transform: scale(1.02); /* Ligero aumento al pasar el ratón */
            box-shadow: 3px 3px 7px rgba(0, 0, 0, 0.15); /* Sombra más pronunciada */
        }
        
        .option img {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }
        
        .hidden {
            display: none;
        }
        
        .logo {
            width: 200px;
            height: auto;
            margin-bottom: 15px;
        }  

        .logo-group {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 15px;
        }
    </style>
</head>
