    <script>
        const filterButtons = document.querySelectorAll('.btn');
        const options = document.querySelectorAll('.option');

        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                const groupButtons = button.closest('.btn-group').querySelectorAll('.btn');
                groupButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');

                // Obtener los filtros activos de cada grupo
                const activeFilters = {};
                document.querySelectorAll('.btn-group').forEach(group => {
                    const activeBtn = group.querySelector('.btn.active');
                    activeFilters[group.dataset.filterGroup] = activeBtn.dataset.filter;
                });

                options.forEach(option => {
                    option.classList.remove('hidden'); // Mostrar todas las opciones al principio

                    // Verificar si la opción coincide con *todos* los filtros activos
                    for (const filterGroup in activeFilters) {
                        const filter = activeFilters[filterGroup];
                        if (filter !== 'all' && !option.classList.contains(filter)) {
                            option.classList.add('hidden');
                            break; // Si no coincide con un filtro, ocultar y pasar a la siguiente opción
                        }
                    }
                });
            });
        });
    </script>
