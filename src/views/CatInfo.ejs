        }
        #sucpara{
            
            text-align: center;
        }
        div>ul>li>p{
            padding:10px;
            font-size:20px;
            font-family: 'Times New Roman', Times, serif;
        }
        .successphoto{
            height: 300px; /* Larger height for better visibility */
            width: 250px; /* Set width to match height */
            object-fit: cover; /* Ensure images are cropped neatly */
            border-radius: 50%; /* Fully rounded images */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add a soft shadow */
        }
        .slideshow{
            margin-top: 5%;
        }

        .faq {
            margin: 30px auto;
            margin-bottom: 10%;
            width: 80%;
        }

        .faq-item {
            margin-bottom: 15px;
        }

        .faq-answer {
            display: none;
