        #throwlist{
            margin: auto;
            display:flex;
            list-style: none;
            justify-content: space-evenly;
            overflow: hidden;
        }
        div>ul>li{
            float:left;
            opacity:0;
            transform: translateX(100%);
            /* using transform property [5] */
