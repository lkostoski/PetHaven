            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .faq-question {
            display: block;
            width: 100%;
            text-align: left;
            padding: 10px;
            background: #4a90e2;
            color: white;
            border: none;
            border-radius: 5px;
        }

        .faq-question:hover {
            background: #357ab8;
        }

        .question-section {
            max-width: 600px;
            margin-top: 2%;
            margin-bottom: 5%;
        }
        .question-card {
            margin-top: 15px;
        }



    </style>
