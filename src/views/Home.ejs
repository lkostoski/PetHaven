    <style>
        #slideshow-title{
            position:relative;
            color: #2F3C7E;
            font-family: 'Times New Roman', Times, serif;
            font-weight: bold;
            text-align: center;
            margin-top: 150px;
            padding-bottom:30px;
        }

        .slideshow{
            height:auto;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-container{
            display:flex;
        }
        
        .cards{
            background-color:#2F3C7E;
            color:#FBEAEB;
            flex: 1;
            border-radius: 18%;
            transition: ease-in-out opacity 0.5s;
        }

        #prev{
            position: absolute;
            left:10%;
            z-index: 3;
            font-size: 200%;
            background: #2F3C7E;
            color:#FBEAEB;
            font-weight: bold;
            width: 64px;
            height: 64px;
            border-radius: 50%;
            border:none;
            transform: rotate(-90deg);
        }

        #prev:hover{
            cursor: pointer;
            background-color: #FBEAEB;
            color: #2F3C7E;
            border: solid #2F3C7E;
        }

        .card-1{
            z-index: 1;
            opacity: 50%;
            transform: translateX(50%);
        }

        .card-2{
            position: relative;
            margin-left: auto;
            margin-right: auto;
            z-index: 2;
            transform: translateX(0);
        }

        .card-2:hover{
            transform: scale(1.1);
        }

        .card-3{
            position:relative;
            transform: translateX(-50%);
            z-index: 1;
            opacity: 50%;
        }

        #next{
            position: absolute;
            right:10%;
            z-index: 3;
            font-size: 200%;
            background: #2F3C7E;
            color:#FBEAEB;
            font-weight: bold;
            width: 64px;
            height: 64px;
            border: none;
            border-radius: 50%;
            transform: rotate(90deg);
        }

        #next:hover{
            cursor: pointer;
            background-color: #FBEAEB;
            color: #2F3C7E;
            border: solid #2F3C7E;
        }

        .card-img{
            width: 80%;
            padding: 20px;
            border-radius: 21%;
            min-width:100px;
        }

        #card-header{
            margin-top: 0px;
            text-align: left;
            padding-left: 10%;
        }

        #card-description{
            margin-top: 0px;
            text-align: center;
            font-size: x-large;
            padding: 10%;
            text-wrap: auto;
        }
        
        #adopt-button{
            text-align: center;
        }

        #adopt{
            position: relative;
            margin-top: 5%;
            background: #2F3C7E;
            font-family: "Times New Roman", Times, serif;
            border: none;
            border-radius:0px 20px 0px 20px;
            color: #FBEAEB;
            width:25%;
            font-size: 250%;
            padding:20px;
        }

        #adopt:hover{
            cursor: pointer;
            text-decoration: underline;
        }

        @media only Screen and (max-width:600px){
            .card-img{
                padding-left:10%;
            }

            #card-header{
                padding-left: 0%;
                font-size:150%;
                text-align: center;
                
            }

            #card-description{
                font-size:medium;
                padding: 5%;
            }

            #adopt{
                width:40%;
                font-size: 200%;
            }

            #next{
                right:3%;
            }

            #prev{
                left:3%;
            }
        }

        .looking{
            background-color: #FFFFFF;
            height:auto;
            width: 100%;
            margin-top: 5%;
            text-align: center;
            padding-top:50px;
            padding-bottom:50px;
        }

        .flex-container{
            display:flex;
            flex-direction: row;
            justify-content: space-between;
            
        }

        .split-section{
            text-align: center;
            padding: 30px;
            flex: 1;

        }

        .looking > h1{
            display: flex;
            font-size: 400%;
            color: #1E1E1E;
            opacity: 70%;
            justify-content: center;
        }

        @media only Screen and (max-width:600px){
            .flex-container{
                flex-direction: column;
            }

            .looking > h1{
                font-size: 300%;
            }
        }

        #learn{
            display: flex;
            font-size: 24px;
            padding: 20px;
            background: none;
            color:#2F3C7E;
            font-family: "Times New Roman", Times, serif;
            font-weight: bold;
            border: solid #2F3C7E;
            border-width: 4px;
            margin-left: auto;
            margin-right: auto;
            border-radius: 40px;
        }

        #learn:hover{
            background-color: #2F3C7E;
            color: #FBEAEB;
            cursor: pointer;
        }

        .information{
            padding-bottom:7%;
        }

        .flex-container-1{
            display:flex;
            flex-direction: row;
            justify-content: space-between;
            padding-left: 20%;
            padding-right: 20%;
        }

        .split-section-1{
            color: #2F3C7E;
            text-align: center;
            margin: auto;
            padding: 20px 30px 20px 30px;
            width: 100%;
            font-size: large;
        }

        .split-section-1 > h1{
            font-family: "Times New Roman", Times, serif;
            font-weight: bold;
            font-size: x-large;
        }

        .split-section-1 > img{
            width:100%;
            min-width: 180px;
            border-radius: 20px;
        }

        @media only Screen and (max-width:600px){
            .information{
                padding-bottom:17%;
            }

            .flex-container-1{
                flex-direction: row;
                padding: 0;
            }
            
            .split-section-1{
                color: #2F3C7E;
                text-align: center;
                margin: auto;
                padding: 30px;
                font-size: 80%;
            }
            
            .split-section-1 > h1{
                font-family: "Times New Roman", Times, serif;
                font-weight: bold;
                font-size: 200%;
                width:100%;
            }
        }
    </style>
</head>
