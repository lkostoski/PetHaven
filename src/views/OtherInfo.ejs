<script>
            const catFacts = [
                "Cats can rotate their ears 180 degrees.",
                "A group of cats is called a clowder.",
                "Cats sleep for 70% of their lives.",
                "A cat's nose is as unique as a human fingerprint.",
                "Cats have five toes on their front paws, but only four on their back paws.",
                "The oldest known pet cat was found in a 9,500-year-old grave on the Mediterranean island of Cyprus."
            ];

            const generateFactButton = document.getElementById('generateFactButton');
            const catFactCard = document.getElementById('catFactCard');
            const catFactText = document.getElementById('catFactText');

            generateFactButton.addEventListener('click', function() {
                const randomFact = catFacts[Math.floor(Math.random() * catFacts.length)];

                catFactText.textContent = randomFact;
                catFactCard.classList.remove('d-none');
            });

            const quizData = [
            {
                question: "What is the average lifespan of a domestic dog?",
                options: ["5-8 years", "10-13 years", "15-20 years", "20-25 years"],
                answer: 1
            },
            {
                question: "Which of these is a common health issue in cats?",
                options: ["Arthritis", "Obesity", "Heart disease", "All of the above"],
                answer: 3
            },
            {
                question: "What is the primary diet of a rabbit?",
                options: ["Grains", "Hay", "Meat", "Fruit"],
                answer: 1
            }
        ];

        const quizContainer = document.getElementById('quiz');
        const submitButton = document.getElementById('submit');
        const resultContainer = document.getElementById('result');

        function loadQuiz() {
            quizContainer.innerHTML = quizData.map((item, index) => `
                <div class="question">
                    <h3>${index + 1}. ${item.question}</h3>
                    <ul class="options">
                        ${item.options.map((option, i) => `
                            <li>
                                <label>
                                    <input type="radio" name="question${index}" value="${i}"> ${option}
                                </label>
                            </li>
                        `).join('')}
                    </ul>
                </div>
            `).join('');
        }

        function calculateResults() {
            let score = 0;

            quizData.forEach((item, index) => {
                const selectedOption = document.querySelector(`input[name="question${index}"]:checked`);
                if (selectedOption && parseInt(selectedOption.value) === item.answer) {
                    score++;
                }
            });

            resultContainer.innerHTML = `You scored ${score} out of ${quizData.length}!`;
        }

        submitButton.addEventListener('click', calculateResults);

        loadQuiz();

</script>
